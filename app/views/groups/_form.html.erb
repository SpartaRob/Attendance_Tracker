<%= form_for group do |g| %>

<center>
<!-- Checks if there are already error messages. If there are any messages then
additonal ones will not show- However, if there are no messages already on the page
then messages will appear -->

<!-- In order for the alerts to be styles classes have been added -->
<% if group.errors.any? %>

<div class="alert alert-danger message-info" role="alert">
  <h2 class="alert-heading"> <%= pluralize(group.errors.count,'error') %> To Fix </h2>
  <hr>
  <% group.errors.each do |attr, message| %>
    <ul>
      <li style="list-style: none;">
        <% if message.to_s.length != 0 %>
          <p class="mb-0 message" role="alert"><%= message %></p>
        <% end %>
      </li>
    </ul>
  <% end %>
</div>

<% end %>

<div class="form">
  <div class="field">
    <%= g.label :Name %>
    <div class="nameInput">
      <%= g.text_field :name %>
    </div>
  </div>
  <br>
  <div class="field">
    <%= g.label :Stream %>
    <div class="nameInput">
      <%= g.text_field :stream %>
    </div>
  </div>
  <div class="field">
    <%= g.label :Start_Date %>
    <div class="nameInput">
      <%= g.date_field :startdate, :order => [:day, :month, :year]%>
    </div>
  </div>
  <div class="field">
    <%= g.label :End_Date %>
    <div class="nameInput">
      <%= g.date_field :enddate, :order => [:day, :month, :year] %>
    </div>
  </div>
  <div class="field">
    <%= g.label :Active %>
    <div class="select">
    <%= g.check_box :active %>
    </div>
  </div>
  <br>
  <div class="action">
      <%= g.submit  %>
  </div>
</div>
</center>

<% end %>
